{
  "name": "github-action-template",
  "version": "1.0.0",
  "description": "A comprehensive template for creating GitHub Actions with Node.js, TypeScript support, and modern development practices",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist",
    "build:ts": "tsc && ncc build dist/index.js -o dist",
    "test": "jest",
    "test:ts": "jest --testPathPattern=src/test/index.test.ts",
    "lint": "eslint src/**/*.js",
    "lint:ts": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.js",
    "format:ts": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "github",
    "actions",
    "template",
    "nodejs",
    "typescript",
    "ci-cd",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/github-action-template.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/github-action-template/issues"
  },
  "homepage": "https://github.com/yourusername/github-action-template#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.34.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}